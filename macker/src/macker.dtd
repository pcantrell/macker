<!ELEMENT macker (ruleset)+>

<!ELEMENT ruleset (pattern|access-rule|var|foreach|ruleset)*>
<!ATTLIST ruleset name  CDATA #IMPLIED> 

<!ELEMENT var EMPTY>
<!ATTLIST var name  CDATA #REQUIRED>
<!ATTLIST var value CDATA #REQUIRED>

<!ELEMENT foreach (pattern|foreach|access-rule)*>
<!ATTLIST foreach var     CDATA #REQUIRED> 
<!ATTLIST foreach regex   CDATA #REQUIRED> 

<!ELEMENT pattern (include|exclude)*>
<!ATTLIST pattern name    CDATA #REQUIRED> 
<!ATTLIST pattern pattern CDATA #IMPLIED> 
<!ATTLIST pattern regex   CDATA #IMPLIED> 

<!ELEMENT include (include|exclude)*>
<!ATTLIST include pattern CDATA #IMPLIED> 
<!ATTLIST include regex   CDATA #IMPLIED> 

<!ELEMENT exclude (include|exclude)*>
<!ATTLIST exclude pattern CDATA #IMPLIED> 
<!ATTLIST exclude regex   CDATA #IMPLIED> 

<!ELEMENT access-rule (deny,(allow|deny)*)>
<!ELEMENT allow (from?,to?,(allow|deny)*)>
<!ELEMENT deny  (from?,to?,(allow|deny)*)>
<!ELEMENT from  (message?,(include|exclude)*)>
<!ELEMENT to    (message?,(include|exclude)*)>
<!ATTLIST from pattern CDATA #IMPLIED> 
<!ATTLIST to   pattern CDATA #IMPLIED> 
<!ATTLIST from regex   CDATA #IMPLIED> 
<!ATTLIST to   regex   CDATA #IMPLIED> 
<!ELEMENT message (#PCDATA)>
