<macker>

    <ruleset name="filter test">
        
        <pattern name="foo" filter="interface" />
        
        <access-rule>
            <deny>
<!--                <from filter="extends" regex="net.innig.macker.rule.Rule">-->
                <from filter="abstract-class">
                    <include regex="**Filter*" />
                </from>
                <to regex="java.lang.xObject" />
            </deny>
        </access-rule>
        
        <access-rule>
            <deny>
                <from filter="subtype-of" regex="net.innig.macker.rule.Rule">
                    <include regex="**Rule*" />
                </from>
                <to regex="void" />
            </deny>
        </access-rule>
        
    </ruleset>

