<?xml version="1.0"?>

<project name="Macker Ant Task Test" default="go" basedir="..">

    <target name="go">

        <path id="run.classpath">
            <pathelement location="build/classes" />
            <pathelement location="conf" />
            <fileset dir="lib" includes="**/*.jar" />
        </path>
        <property name="run.classpath" refid="run.classpath" />
        <taskdef name="macker"
            classname="net.innig.macker.ant.MackerAntTask"
            classpath="${run.classpath}"/>
        
        <macker printthreshold="warning" angerthreshold="error">
            <rules dir="." includes="test/macker-sample.xml" />
            <classes dir=".">
                <include name="build/classes/**/*.class" />
            </classes>
            <var name="basepkg" value="net.innig.macker" />
            <classpath refid="run.classpath" />
        </macker>

    </target>
</project>
